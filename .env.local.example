# Environment Variables Example
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Member Photo Upload Bucket (optional, defaults to 'gallery')
# Create this bucket in Supabase Storage and set public policy
NEXT_PUBLIC_MEMBER_BUCKET=members

# Social Media API Keys (optional)
INSTAGRAM_ACCESS_TOKEN=
YOUTUBE_API_KEY=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# AI Chat (optional)
GEMINI_API_KEY=
NEXT_PUBLIC_DISABLE_CHAT=0

# Login Rate Limiting (optional)
LOGIN_MAX_ATTEMPTS=5
NEXTAUTH_SESSION_MAX_AGE=28800

# Email (optional, for notifications)
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
